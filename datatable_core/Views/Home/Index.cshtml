@{
    ViewData["Title"] = "Home Page";
}
@section Estilos {
    <link href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/1.7.1/css/buttons.dataTables.css" rel="stylesheet" />
}

<div class="card">
    <div class="card-header">
        Empleados
    </div>
    <div class="card-body">
        <table id="tb_empleados" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>IdEmpleado</th>
                    <th>Nombre</th>
                    <th>Cargo</th>
                    <th>Oficina</th>
                    <th>Salario</th>
                    <th>Telefono</th>
                    <th>Fecha Ingreso</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.html5.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

    <script src="https://cdn.datatables.net/buttons/3.0.0/js/buttons.print.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tb_empleados').DataTable({
                "ajax": {
                    "url": "@Url.Action("ListaEmpleados", "Home")",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "idEmpleado" },
                    { "data": "nombre" },
                    { "data": "cargo" },
                    { "data": "oficina" },
                    { "data": "salario" },
                    { "data": "telefono" },
                    { "data": "fechaIngreso" }
                ],
                "language": {
                    url: "https://cdn.datatables.net/plug-ins/2.0.0/i18n/es-ES.json"
                },
                "columnDefs": [
                    {
                        "targets": 0,
                        "visible": false
                    }
                ],
                dom:"Bfrtip",
                buttons:[
                    {
                        extend: "excelHtml5",
                        text: "Exportar Excel",
                        filename: "Reporte de Empleados",
                        title: "",
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5, 6]
                        }
                    },
                    {
                        extend: "pdfHtml5",
                        text: "Exportar PDF",
                        filename: "Reporte de Empleados",
                        title: "",
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5, 6]
                        }
                    },
                    {
                        extend: "print",
                        title: "",
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5, 6]
                        }
                    }
                ]
            });
        });
    </script>
}
